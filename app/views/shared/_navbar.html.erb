
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="logo">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "logo-bbe.png", class:"logo-bbe" %>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <% if current_page?(root_path) %>
    <h1>BBE</h1>

  <% else %>
    <div class='search-bar'>
      <%= form_tag bakeries_path, method: :get do %>
        <div class="col-sm d-flex column justify-content-center">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            id: "search-form-control",
            placeholder: "Find a pet"
          %>
          <%= submit_tag "Search", class: "btn btn-ghost" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="dropdown">

	  <div class="btn-menu dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    <%= image_tag "menu_icon.png", class:"menu-bbe" %>
    </div>

	  <ul class="dropdown-menu dropdown-menu-end " aria-labelledby="dropdownMenuButton1">
      <li><a class="dropdown-item" href="#">Action</a></li>
      <li><a class="dropdown-item" href="#">account</a></li>
      <li><a class="dropdown-item" href="#">favourites</a></li>
	  </ul>
	</div>

  <!--closind div-->
</div>
