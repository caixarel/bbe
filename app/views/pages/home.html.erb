
  <div class="banner-container">

    <div class="text row">
      <div class="title col-6">
        <h1>BIG<br>BAGUETTE<br>ENERGY</h1>
      </div>

      <div class="smaller-title col-6">
        <h2>CARE FOR THE PLANET & YOUR TASTEBUDS</h2>
      </div>

    <!-- row div-->
    </div>

    <div class="search d-flex justify-content-center mt-5">
      <p class="find-text p-2">Find the best bakeries near you</p>
      <div class='search-bar'>
        <%= form_tag bakeries_path, method: :get do %>
          <div class="search-form-control form-group">
            <%= text_field_tag :query,
                        params[:query],
                        class: "form-control",
                        id: "search-form-control",
                        placeholder: "Find a bakery"
                      %>
            <button name="button" type="submit" class="btn">
              <i class="fas fa-search"></i>
            </button>

          </div>

        <% end %>
      </div>
    <!-- row div-->
    </div>

    <!-- text-container div-->
  </div>

